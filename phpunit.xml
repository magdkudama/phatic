<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="./src/MagdKudama/Phatic/Tests/bootstrap.php">
    <filter>
        <whitelist>
            <directory>src</directory>
            <exclude>
                <directory>src/MagdKudama/Phatic/Tests</directory>
                <directory>src/MagdKudama/Phatic/bootstrap</directory>
                <directory>src/MagdKudama/Phatic/Exception</directory>
                <file>src/MagdKudama/Phatic/Config/services.yml</file>
            </exclude>
        </whitelist>
    </filter>

    <testsuites>
        <testsuite name="Phatic Test Suite">
            <directory>./src/MagdKudama/Phatic/Tests/</directory>
        </testsuite>
    </testsuites>
</phpunit>